<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Status Bar -->

    <!-- Fixed Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
        android:background="@android:color/white"
            android:elevation="2dp">

        <ImageButton
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@drawable/arrowleft" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Room"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="#000000" />

            <View
            android:layout_width="36dp"
            android:layout_height="36dp" />

        </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Room Images Section -->
            <FrameLayout
                android:id="@+id/flImageContainer"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="16dp">

                <!-- Placeholder Image (clickable, default visible) -->
                <ImageView
                    android:id="@+id/ivPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_upload_cloud"
                    android:contentDescription="Click here to upload"
                    android:padding="40dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:tint="#888888"
                    android:visibility="visible" />

                <!-- Overlayed Text -->
                <TextView
                    android:id="@+id/tvUploadText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="There's no images being uploaded"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="12dp"/>

                <!-- ViewPager for selected images (hidden by default) -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:padding="12dp"
                    android:visibility="gone" />

                <!-- Floating Add Images Button -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabAddImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Add images"
                    app:backgroundTint="@color/brown"
                    app:tint="#FFFFFF"
                    app:fabSize="mini"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- Room Details Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room Details"
                        android:textSize="18sp"
                        android:textColor="#212529"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="12dp" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room Title *"
                        android:textSize="14sp"
                        android:textColor="#495057"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="8dp" />

                    <EditText
                            android:id="@+id/etTitle"
                            android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/modern_edittext_focused"
                        android:padding="16dp"
                        android:hint="Enter room title"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:inputType="textCapWords"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description *"
                        android:textSize="14sp"
                        android:textColor="#495057"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="8dp" />

                    <EditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/modern_edittext_focused"
                        android:padding="16dp"
                        android:hint="Enter room description"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                            android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp"
                        android:maxLines="3"
                        android:layout_marginBottom="16dp" />

                    <!-- Price and Capacity Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price (â‚±) *"
                                android:textSize="14sp"
                                android:textColor="#495057"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginBottom="8dp" />

                            <EditText
                                android:id="@+id/etPrice"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="@drawable/modern_edittext_focused"
                                android:padding="16dp"
                                android:hint="Enter price"
                                android:textColor="#212529"
                                android:textColorHint="#6C757D"
                                android:inputType="number"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Capacity *"
                                android:textSize="14sp"
                                android:textColor="#495057"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginBottom="8dp" />

                            <EditText
                                android:id="@+id/etCapacity"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="@drawable/modern_edittext_focused"
                                android:padding="16dp"
                                android:hint="Enter capacity"
                                android:textColor="#212529"
                                android:textColorHint="#6C757D"
                                android:inputType="number"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Total Rooms -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Units *"
                        android:textSize="14sp"
                        android:textColor="#495057"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="8dp" />

                    <EditText
                            android:id="@+id/etTotalRooms"
                            android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/modern_edittext_focused"
                        android:padding="16dp"
                        android:hint="Enter total units"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:inputType="number"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Changes"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/modern_button_ripple"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.5"
                android:layout_marginTop="8dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </ScrollView>

    </LinearLayout>
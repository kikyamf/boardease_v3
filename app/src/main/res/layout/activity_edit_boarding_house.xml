<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Fixed Header Section - Always at top -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/arrowleft"
                    android:contentDescription="Back"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAddNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textSize="16sp"
                        android:textColor="#6C757D"
                        android:fontFamily="@font/poppins_medium"
                        android:letterSpacing="0.5"/>

                    <TextView
                        android:id="@+id/tvListing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listing"
                        android:textColor="#212529"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="-4dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivSymbol"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/boxadd"
                    android:contentDescription="Edit listing"
                    android:scaleType="fitCenter"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="8dp">

            <!-- Image Upload Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property Photos"
                        android:textSize="18sp"
                        android:textColor="#212529"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="12dp"/>

                    <FrameLayout
                        android:id="@+id/flImageContainer"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/modern_dashed_border">

                        <!-- Placeholder Image (clickable, default visible) -->
                        <ImageView
                            android:id="@+id/ivPlaceholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_upload_cloud"
                            android:contentDescription="Click here to upload"
                            android:padding="40dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:tint="#A97A50"
                            android:visibility="visible" />

                        <!-- Overlayed Text -->
                        <TextView
                            android:id="@+id/tvUploadText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to add photos"
                            android:textColor="#A97A50"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="16dp"/>

                        <!-- ViewPager for selected images (hidden by default) -->
                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerImages"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:padding="12dp"
                            android:visibility="gone" />
                    </FrameLayout>

                    <!-- Floating Add Images Button -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabAddImages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="-30dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="Add images"
                        app:backgroundTint="#A97A50"
                        app:tint="#FFFFFF"
                        app:fabSize="mini"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Basic Information Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Information"
                        android:textSize="18sp"
                        android:textColor="#212529"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="16dp"/>

                    <!-- Property Name Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property Name"
                        android:textSize="14sp"
                        android:textColor="#495057"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etTitle"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Enter property name"
                        android:textSize="16sp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:fontFamily="@font/poppins_regular"
                        android:background="@drawable/modern_edittext_focused"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Address Field -->
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="14sp"
                        android:textColor="#495057"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Enter complete address"
                        android:textSize="16sp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:fontFamily="@font/poppins_regular"
                        android:background="@drawable/modern_edittext_focused"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Details Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BH Details"
                        android:textSize="18sp"
                        android:textColor="#212529"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="16dp"/>

                    <GridLayout
                        android:id="@+id/glDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:text="Bathrooms:"
                            android:textSize="14sp"
                            android:textColor="#495057"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginBottom="8dp"
                            android:layout_columnWeight="1"/>
                        <EditText
                            android:id="@+id/etBathrooms"
                            android:hint="Enter no. of bathrooms"
                            android:textSize="16sp"
                            android:textColor="#212529"
                            android:textColorHint="#6C757D"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="number"
                            android:background="@drawable/modern_edittext_focused"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_columnWeight="2"/>

                        <TextView
                            android:text="Area (sqft):"
                            android:textSize="14sp"
                            android:textColor="#495057"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginBottom="8dp"
                            android:layout_columnWeight="1"/>
                        <EditText
                            android:id="@+id/etArea"
                            android:hint="Enter area size"
                            android:textSize="16sp"
                            android:textColor="#212529"
                            android:textColorHint="#6C757D"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="number"
                            android:background="@drawable/modern_edittext_focused"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_columnWeight="2"/>

                        <TextView
                            android:text="Build Year:"
                            android:textSize="14sp"
                            android:textColor="#495057"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginBottom="8dp"
                            android:layout_columnWeight="1"/>
                        <EditText
                            android:id="@+id/etBuildYear"
                            android:hint="Enter year"
                            android:textSize="16sp"
                            android:textColor="#212529"
                            android:textColorHint="#6C757D"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="number"
                            android:background="@drawable/modern_edittext_focused"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_columnWeight="2"/>
                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Description Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="18sp"
                        android:textColor="#212529"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="16dp"/>

                    <EditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Enter detailed description"
                        android:textSize="16sp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="top|start"
                        android:padding="16dp"
                        android:background="@drawable/modern_edittext_focused"
                        android:inputType="textMultiLine"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Rules Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvRules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rules"
                        android:textSize="18sp"
                        android:textColor="#212529"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="16dp"/>

                    <EditText
                        android:id="@+id/etRules"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Enter house rules and regulations"
                        android:textSize="16sp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="top|start"
                        android:padding="16dp"
                        android:background="@drawable/modern_edittext_focused"
                        android:inputType="textMultiLine"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Changes"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/modern_button_ripple"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.5"
                android:layout_marginTop="8dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Status Bar -->

    <!-- Fixed Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@drawable/arrowleft" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Profile"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="#000000" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Profile Picture Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="30dp">

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp">

                <com.example.mock.CircularImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/btn_profile"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_clip" />

                <!-- Edit overlay -->
                <ImageView
                    android:id="@+id/ivEditProfile"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_camera1"
                    android:tint="@color/white"
                    android:background="@drawable/dot_inactive"
                    android:padding="4dp"
                    android:elevation="4dp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to change profile picture"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Personal Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textSize="18sp"
                    android:textColor="#212529"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="12dp" />

                <!-- First Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name *"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/modern_edittext_focused"
                    android:padding="16dp"
                    android:hint="Enter first name"
                    android:textColor="#212529"
                    android:textColorHint="#6C757D"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Middle Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Middle Name"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/modern_edittext_focused"
                    android:padding="16dp"
                    android:hint="Enter middle name (optional)"
                    android:textColor="#212529"
                    android:textColorHint="#6C757D"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Last Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name *"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/modern_edittext_focused"
                    android:padding="16dp"
                    android:hint="Enter last name"
                    android:textColor="#212529"
                    android:textColorHint="#6C757D"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Suffix -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suffix"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerSuffix"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/modern_edittext_focused"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Birthdate -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthdate *"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/modern_edittext_focused"
                    android:text="Select Birthdate"
                    android:textColor="#212529"
                    android:textColorHint="#6C757D"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:textAlignment="textStart"
                    android:gravity="start|center_vertical"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="8dp"
                    android:padding="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Contact Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textSize="18sp"
                    android:textColor="#212529"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="6dp" />

                <!-- Phone Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number *"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/modern_edittext_focused"
                    android:padding="16dp"
                    android:hint="Enter phone number"
                    android:textColor="#212529"
                    android:textColorHint="#6C757D"
                    android:inputType="phone"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address *"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/modern_edittext_focused"
                    android:padding="16dp"
                    android:hint="Enter your address"
                    android:textColor="#212529"
                    android:textColorHint="#6C757D"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:maxLines="3" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Changes"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/modern_button_ripple"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.5"
            android:layout_marginTop="8dp"
            android:stateListAnimator="@null" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

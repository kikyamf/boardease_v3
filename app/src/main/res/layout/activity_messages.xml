<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrowleft"
            android:contentDescription="Back"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/search"
            android:contentDescription="Search"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!-- Modern Horizontal Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
            android:padding="16dp">

        <!-- Add / Create GC button -->
        <LinearLayout
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                android:id="@+id/addGroupButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                android:src="@drawable/add_gc"
                android:background="@drawable/circle_background1"
                android:scaleType="centerInside"
                android:contentDescription="Add Group" />

            <TextView
                android:id="@+id/textNewGC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                android:text="New GC"
                android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#495057" />
        </LinearLayout>

        <!-- Divider line -->
        <View
            android:id="@+id/dividerView"
            android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#E9ECEF"
                android:layout_marginHorizontal="16dp" />

        <!-- Horizontal RecyclerView (Profiles) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profileRecyclerView"
            android:layout_width="0dp"
                android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:overScrollMode="never"
                android:paddingEnd="8dp"
                android:visibility="visible" />

            <!-- Empty State for Profile List -->
        <LinearLayout
            android:id="@+id/layoutEmptyProfileList"
            android:layout_width="0dp"
                android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
                android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_no_boarders"
                android:contentDescription="No Boarders"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No boarders yet"
                android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#6C757D"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="All Messages"
        android:textColor="#212529"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp" />

    <!-- Chat List RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp" />

    <!-- Empty State for Chat List -->
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutEmptyChatList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_no_messages"
            android:contentDescription="No Messages"
                android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No messages yet"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#212529"
                android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start a conversation with someone to see your messages here."
            android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#6C757D"
            android:gravity="center"
                android:lineSpacingExtra="4dp"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

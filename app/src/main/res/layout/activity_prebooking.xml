<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circle_bg"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pre-Booking"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Boarding House Info Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!-- BH Image -->
                    <ImageView
                        android:id="@+id/imgBoardingHouse"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_listing"
                        android:contentDescription="Boarding House Image"
                        app:cornerRadius="12dp" />

                    <!-- BH Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:id="@+id/tvBoardingHouseName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunshine Boarding House"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvBoardingHouseDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A modern and comfortable boarding house located in the heart of Quezon City. Perfect for students and working professionals who value convenience and affordability."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSeeMoreDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See more..."
                            android:textColor="#A18167"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_medium"
                            app:cornerRadius="15dp"
                            app:strokeColor="#A18167"
                            app:strokeWidth="1dp"
                            android:backgroundTint="#FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Accommodation Chosen Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You chose"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#F8F9FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!-- Accommodation Type -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAccommodationType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private Room"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvAccommodationPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱5,000/month"
                            android:textSize="16sp"
                            android:textColor="#A18167"
                            android:fontFamily="@font/poppins_semibold" />
                    </LinearLayout>

                    <!-- Accommodation Description -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAccommodationDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Single occupancy with private bathroom and essential amenities."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnToggleAccommodationDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See More"
                            android:textColor="#A18167"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_medium"
                            app:cornerRadius="15dp"
                            app:strokeColor="#A18167"
                            app:strokeWidth="1dp"
                            android:backgroundTint="#FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Collapsible Accommodation Details -->
                <LinearLayout
                    android:id="@+id/layoutAccommodationDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:paddingTop="0dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Private bedroom with lockable door\n• Private bathroom with hot and cold water\n• Study desk and chair\n• Wardrobe and storage space\n• Air conditioning unit\n• Free WiFi access\n• Access to common kitchen area\n• Laundry facilities available\n• 24/7 security and CCTV monitoring\n• Near public transportation"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp" />

            <!-- Boarder Details Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boarder Details"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Full Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/tvFullName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="John Doe"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                    <!-- Check-in Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check-in Date"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCheckInDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select Date"
                            android:textColor="#A18167"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            app:cornerRadius="20dp"
                            app:strokeColor="#A18167"
                            app:strokeWidth="1dp"
                            android:backgroundTint="#FFFFFF" />
                    </LinearLayout>

                    <!-- Check-out Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check-out Date"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCheckOutDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select Date"
                            android:textColor="#A18167"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            app:cornerRadius="20dp"
                            app:strokeColor="#A18167"
                            app:strokeWidth="1dp"
                            android:backgroundTint="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Final Step Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinalStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Step"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="25dp"
            android:backgroundTint="#A18167"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You won't be charged yet."
            android:textSize="12sp"
            android:textColor="#999999"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Boarding House Image -->
        <ImageView
            android:id="@+id/imgBoardingHouse"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_listing"
            android:contentDescription="Boarding House Image"
            app:cornerRadius="12dp" />

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <!-- BH Name -->
            <TextView
                android:id="@+id/tvBoardingHouseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunshine Boarding House"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/location"
                    android:contentDescription="Location"
                    android:tint="#666666" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quezon City, Metro Manila"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cozy and affordable boarding house with modern amenities. Perfect for students and working professionals."
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Accommodation Types -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvAccommodationTypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private Rooms • Bed Spacer"
                    android:textSize="11sp"
                    android:textColor="#A18167"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/rounded_rectangle_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />
            </LinearLayout>

            <!-- Price and Rating Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- Price -->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱3,500/month"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />

                <!-- Rating (if available) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_star"
                        android:contentDescription="Rating"
                        android:tint="#FFC107" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top|end"
            android:layout_marginTop="4dp">

            <!-- Favorite Button -->
            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/favorite"
                android:contentDescription="Add to favorites"
                android:padding="6dp"
                android:layout_marginBottom="4dp" />

            <!-- Delete Button (for favorites) -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/trash"
                android:contentDescription="Delete from favorites"
                android:padding="6dp"
                android:tint="#FF5722"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


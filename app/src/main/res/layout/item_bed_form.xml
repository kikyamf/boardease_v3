<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Title and Remove Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bed Spacer Details"
                android:textSize="18sp"
                android:textColor="#212529"
                android:fontFamily="@font/poppins_semibold" />

            <ImageButton
                android:id="@+id/btnRemoveBed"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/delete"
                android:background="@drawable/icon_hover_effect"
                android:contentDescription="Remove Bed Spacer"
                android:padding="6dp" />
        </LinearLayout>

        <!-- Image Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Photos"
            android:textSize="14sp"
            android:textColor="#495057"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="8dp"/>

        <FrameLayout
            android:id="@+id/flBedImageContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/modern_dashed_border">

            <!-- Placeholder with upload icon -->
            <LinearLayout
                android:id="@+id/layoutUploadPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivUploadBedIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_upload_cloud"
                    android:contentDescription="Click here to upload"
                    android:tint="#A97A50" />

                <TextView
                    android:id="@+id/tvUploadBedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to add photos"
                    android:textColor="#A97A50"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ViewPager for selected images (hidden by default) -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="12dp"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Form Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="14sp"
                android:textColor="#495057"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etBedTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter bed spacer title"
                android:textSize="16sp"
                android:textColor="#212529"
                android:textColorHint="#6C757D"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/modern_edittext_focused"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Description Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="#495057"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etBedDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Enter detailed description"
                android:textSize="16sp"
                android:textColor="#212529"
                android:textColorHint="#6C757D"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:background="@drawable/modern_edittext_focused"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Price and Capacity Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Price Field -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="14sp"
                        android:textColor="#495057"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etBedPrice"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="â‚±/month"
                        android:textSize="16sp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="numberDecimal"
                        android:background="@drawable/modern_edittext_focused"
                        android:padding="16dp"/>
                </LinearLayout>

                <!-- Capacity Field -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capacity"
                        android:textSize="14sp"
                        android:textColor="#495057"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etBedCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Persons"
                        android:textSize="16sp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="number"
                        android:background="@drawable/modern_edittext_focused"
                        android:padding="16dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Total Rooms Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Units"
                android:textSize="14sp"
                android:textColor="#495057"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etBedTotalRooms"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter total number of units"
                android:textSize="16sp"
                android:textColor="#212529"
                android:textColorHint="#6C757D"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:background="@drawable/modern_edittext_focused"
                android:padding="16dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
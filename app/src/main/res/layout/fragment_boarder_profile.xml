<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Header with Back + Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@drawable/arrowleft" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Profile Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <!-- Profile Picture -->
            <com.example.mock.CircularImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/btn_profile"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_clip" />

            <!-- Overlay edit icon -->
            <ImageView
                android:id="@+id/ivEditProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_camera"
                android:tint="@color/white"
                android:background="@drawable/dot_inactive"
                android:padding="4dp"
                android:elevation="4dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvBoarderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boarder Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvBoarderEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="boarder@email.com"
            android:textSize="14sp"
            android:textColor="#777777" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="8dp" />

    <!-- Menu Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Account Settings -->
        <LinearLayout
            android:id="@+id/layoutAccountSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings1"
                android:tint="#795548" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Account Settings"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#999999" />
        </LinearLayout>

        <!-- My Bookings -->
        <LinearLayout
            android:id="@+id/layoutMyBookings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_booking"
                android:tint="#795548" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="My Bookings"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#999999" />
        </LinearLayout>

        <!-- My Favorites -->
        <LinearLayout
            android:id="@+id/layoutMyFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_heart"
                android:tint="#795548" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="My Favorites"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#999999" />
        </LinearLayout>

        <!-- Payment Methods -->
        <LinearLayout
            android:id="@+id/layoutPaymentMethods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_payment2"
                android:tint="#795548" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Payment Methods"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#999999" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/layoutNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification1"
                android:tint="#795548" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Notifications"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#999999" />
        </LinearLayout>

        <!-- Messages -->
        <LinearLayout
            android:id="@+id/layoutMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message1"
                android:tint="#795548" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Messages"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#999999" />
        </LinearLayout>

        <!-- Help & Support -->
        <LinearLayout
            android:id="@+id/layoutHelpSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info1"
                android:tint="#795548" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Help &amp; Support"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#999999" />
        </LinearLayout>

        <!-- About App -->
        <LinearLayout
            android:id="@+id/layoutAboutApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info1"
                android:tint="#795548" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="About App"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#999999" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sign Out Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="16dp"
        android:id="@+id/layoutSignOut">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logout"
            android:tint="#FF3B30" />

        <TextView
            android:id="@+id/tvSignOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Sign Out"
            android:textSize="16sp"
            android:textColor="#FF3B30"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="LOGOUT"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_logout_red"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minWidth="80dp" />
    </LinearLayout>

</LinearLayout>

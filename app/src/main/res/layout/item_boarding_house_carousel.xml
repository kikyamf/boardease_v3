<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="#A18167"
    app:strokeWidth="1dp"
    android:backgroundTint="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Boarding House Image -->
        <ImageView
            android:id="@+id/imgBoardingHouse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_listing"
            android:contentDescription="Boarding House Image"
            app:cornerRadius="12dp" />

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <!-- BH Name -->
            <TextView
                android:id="@+id/tvBoardingHouseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunshine Boarding House"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/location"
                    android:contentDescription="Location"
                    android:tint="#666666" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quezon City"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±3,500/month"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <!-- Favorite Button -->
        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/favorite"
            android:contentDescription="Add to favorites"
            android:padding="4dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
